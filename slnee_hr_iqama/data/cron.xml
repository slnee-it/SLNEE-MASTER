<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <data noupdate="1">
        <!-- Cron for check IQAMA expiration -->
        <record model="ir.cron" id="iqama_expiration_cron">
            <field name="name">Check: IQAMA Expiry Notification</field>
            <field name="model_id" ref="model_hr_iqama"/>
            <field name="state">code</field>
            <field name="code">model.check_iqama_expiry()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>
    </data>
</odoo>