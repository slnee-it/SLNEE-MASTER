    <!-- Follower rules -->
    <record id="property_rule_holidays_follower" model="ir.rule">
        <field name="name">Leaves Follower</field>
        <field name="model_id" ref="hr_holidays.model_hr_holidays"/>
        <field name="domain_force">['|', ('message_follower_ids.partner_id','=',user.partner_id.id), (1, '=', 1)]</field>
        <field name="global" eval="True"/>
    </record>

    <!-- Officer rules -->
    <record id="hr_holidays.property_rule_holidays_officer" model="ir.rule">
        <field name="name">Leaves Officer</field>
