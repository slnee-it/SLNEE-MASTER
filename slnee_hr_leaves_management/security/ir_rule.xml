    <record id="leave_rule_line_manager" model="ir.rule">
        <field name="name">Manager Rule</field>
        <field name="model_id" ref="hr_holidays.model_hr_holidays"/>
        <field name="domain_force">[('employee_id.parent_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4,ref('slnee_hr.group_line_manager'))]"/>
    </record>

